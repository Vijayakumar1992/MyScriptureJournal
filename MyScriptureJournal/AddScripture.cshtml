@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Add a Scripture verse";

    Validation.RequireField("book", "You must enter the book name");
    Validation.RequireField("chapter", "Enter the chapter number");
    Validation.RequireField("verse", "Enter the chapter verse");
    Validation.RequireField("note", "Enter notes");
    Validation.RequireField("createDate", "Enter the date");

    var book = "";
    var chapter = "";
    var verse = "";
    var note = "";
    var createDate = "";

    
    if (IsPost && Validation.IsValid())
    {
        book = Request.Form["book"];
        chapter = Request.Form["chapter"];
        verse = Request.Form["verse"];
        note = Request.Form["note"];
        createDate = Request.Form["createDate"];

        var db = Database.Open("scripturejournal");
        var insertCommand = "INSERT INTO Scripture (Book, Chapter, Verse, Note, createDate) VALUES(@0, @1, @2, @3, @4)";
        db.Execute(insertCommand, book, chapter, verse, note, createDate);
        Response.Redirect("~/ViewAllScripture");
    }

}

<!DOCTYPE html>
<body class="center">
    @Html.ValidationSummary()
    <form method="post">
        <fieldset>
            <legend>Scripture Information</legend>
            <p>
                <label for="Book">Book:</label>
                <input type="text" name="title" value="@Request.Form["book"]" />
                @Html.ValidationMessage("book")

            <p>
                <label for="Chapter">Chapter:</label>
                <input type="text" name="genre" value="@Request.Form["chapter"]" />
                @Html.ValidationMessage("chapter")

            <p>
                <label for="Verse">Verse:</label>
                <input type="text" name="year" value="@Request.Form["verse"]" />
                @Html.ValidationMessage("verse")

            <p>
                <label for="Note">Note:</label>
                <input type="text" name="year" value="@Request.Form["note"]" />
                @Html.ValidationMessage("note")

            <p>
                <label for="CreateDate">CreateDate:</label>
                <input type="text" name="year" value="@Request.Form["createDate"]" />
                @Html.ValidationMessage("createDate")

            <p><input type="submit" name="buttonSubmit" value="Add a Scripture " /></p>
        </fieldset>
    </form>

    <p><a href="~/ViewAllScripture.cshtml">Return to Home page </a></p>

</body>